<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:paddingHorizontal="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvScreenPrevious"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:maxLength="12"
        android:gravity="end"
        android:background="@color/screen_background"
        android:padding="10dp"
        android:layout_weight="3"
        android:text=""/>

    <TextView
        android:id="@+id/tvScreenOp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:maxLength="12"
        android:gravity="end"
        android:background="@color/screen_background"
        android:padding="10dp"
        android:layout_weight="1"
        android:text=""/>

    <TextView
        android:id="@+id/tvScreenCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:maxLength="12"
        android:gravity="end"
        android:background="@color/screen_background"
        android:padding="10dp"
        android:layout_weight="1"
        android:text="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onPositiveNegative"
            android:text="+/-" />


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onClearAll"
            android:text="C" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onClearEntry"
            android:text="CE" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="7" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="8" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="9" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onOperation"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="4" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="5" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="6" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onOperation"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onOperation"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDigit"
            android:text="0" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onDecimal"
            android:text="." />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onOperation"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/buttonBackround"
            app:backgroundTint="@color/buttonBackround"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="onEqual"
            android:text="=" />
    </LinearLayout>

</LinearLayout>